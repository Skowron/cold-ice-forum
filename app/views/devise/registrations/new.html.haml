%h1 Rejestracja
.row &nbsp;
= simple_form_for resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal' } do |f|
  .inputs
    = f.input :email, required: true, autofocus: true, label: "Adres e-mail"
    = f.input :name, required: true, label: "Imię"
    = f.input :password, required: true, label: "Hasło"
    = f.input :password_confirmation, required: true, label: "Potwierdź hasło"
  .form-actions
    = f.button :submit, "Zarejestruj"
