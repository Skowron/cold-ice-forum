= simple_form_for @topic, :html => {:class => 'form-horizontal' } do |f|
  = f.input :title, label: "Nazwa tematu", input_html: {class: :span5}
  = f.input :first_post_content, as: :text, label: "Treść pierwszego postu", input_html: {class: :span8}
  .form-actions
    = f.button :submit, "Utwórz temat", class: 'btn-primary'